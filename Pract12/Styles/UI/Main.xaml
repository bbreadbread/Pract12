<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                    xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf">

    <Style  TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedDarkButton}">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="180"/>
        <Setter Property="Margin" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextHint}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonBackground}"/>
    </Style>
    
    <Style TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="1"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="Main">        
    </Style>

    <Style TargetType="MenuItem">
        <Setter Property="Height" Value="20"/>
    </Style>

    <Style TargetType="Page">
        <Setter Property="Height" Value="430"/>
        <Setter Property="Width" Value="800"/>
    </Style>

    <Style TargetType="Menu">
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="Width" Value="180"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="{DynamicResource TextBoxBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextMain}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource TextHint}"/>
    </Style>

    <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
        <Setter Property="Width" Value="180"/>
        <Setter Property="Height" Value="35"/>
    </Style>
    
    <Style TargetType="TextBox" x:Key="TextBoxAp" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Height" Value="25"/>
        <Setter Property="Width" Value="150"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource TextMain}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="ListView" BasedOn="{StaticResource MaterialDesignListView}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="{DynamicResource MainPanels}"/>
        <Setter Property="Width" Value="500"/>
    </Style>

    <Style TargetType="Frame">
        <Setter Property="Background" Value="{DynamicResource WindowBackgroung}"/>
    </Style>

    <Style TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource WindowBackgroung}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextMain}"/>
    </Style>

    <Style TargetType="Image">
        <Setter Property="Width" Value="90"/>
        <Setter Property="Height" Value="90"/>
    </Style>
</ResourceDictionary>