<Page x:Class="Pract12.Pages.InterestGroupViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract12.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InterestGroupViewPage"      DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>            
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Click="back">Назад</Button>

        <ListView Grid.Row="1" ItemsSource="{Binding service.UserInterestGroups}" SelectedItem="{Binding current, Mode=TwoWay}" Width="369" MouseDoubleClick="OnUserDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn  Width="90"  Header="Имя" DisplayMemberBinding="{Binding User.Name}"/>
                    <GridViewColumn Width="150" Header="Вступил" DisplayMemberBinding="{Binding JoinedAt}"/>
                    <GridViewColumn Width="150" Header="Модератор" DisplayMemberBinding="{Binding IsModerator}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock Style="{StaticResource TitleNameUser}">
                <Run Text="Профиль пользователя " />
                <Run Text="{Binding current.User.Name}" />
            </TextBlock>
            

            <TextBlock x:Name="EmptyProfileText"
               Text="Профиль пуст"
               FontStyle="Italic" Foreground="Gray"/>

            <StackPanel x:Name="ProfilePanel" Visibility="Collapsed">
                <StackPanel Orientation="Vertical">
                    <Label>Телефон</Label>
                    <TextBox IsReadOnly="True" Text="{Binding SelectedUserProfile.Phone}"/>

                    <Label>День рождения</Label>
                    <TextBox IsReadOnly="True" Text="{Binding SelectedUserProfile.Birthday}"/>

                    <Label>Краткое описание</Label>
                    <TextBox IsReadOnly="True" Text="{Binding SelectedUserProfile.Bio}"/>
                </StackPanel>
                <Border Style="{DynamicResource IntAvBor}">
                    <Image x:Name="AvatarImage" Style="{StaticResource IntImg}" Source="{Binding SelectedUserProfile.AvatarUrl}"/>
                </Border>
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="4" Grid.Column="1">
            <Run Text="Дата присоединения: "/>
            <Run Text="{Binding current.JoinedAt}"/>
        </TextBlock>
    </Grid>
</Page>