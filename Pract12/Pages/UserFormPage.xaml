<Page x:Class="Pract12.Pages.UserFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract12.Pages"
      xmlns:validators="clr-namespace:Pract12.ValidationRules"
      xmlns:services="clr-namespace:Pract12.Service"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="UserFormPage">

    <Page.Resources>
        <services:RolesService x:Key="rService"/>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1">
            <Label>Роль</Label>
            <ComboBox ItemsSource="{Binding Source={StaticResource rService}, Path=Roles}"
                      DisplayMemberPath="Title"
                      SelectedItem="{Binding Role}"/>
        </StackPanel>
        <StackPanel>
            <StackPanel>
                <Label>Логин</Label>
                <StackPanel>
                    <TextBox x:Name="LoginBox"  >
                        <TextBox.Text>
                            <Binding Path="Login">
                                <!--<Binding.ValidationRules>
                                    <validators:LoginValidation/>
                                </Binding.ValidationRules>-->
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>
            </StackPanel>
            
            <StackPanel>
                <Label>Имя</Label>
                <StackPanel>
                    <TextBox x:Name="NameBox"  >
                        <TextBox.Text>
                            <Binding Path="Name">
                                <!--<Binding.ValidationRules>
                                    <validators:MainValidation/>
                                </Binding.ValidationRules>-->
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>
            </StackPanel>
            
            <StackPanel>
                <Label>Email</Label>
                <StackPanel>
                    <TextBox x:Name="EmailBox"  >
                        <TextBox.Text>
                            <Binding Path="Email">
                                <!--<Binding.ValidationRules>
                                    <validators:AdressValidation/>
                                </Binding.ValidationRules>-->
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>
            </StackPanel>
            
            <StackPanel>
                <Label>Пароль</Label>
                <StackPanel>
                    <TextBox x:Name="PasswordBox"  >
                        <TextBox.Text>
                            <Binding Path="Password">
                                <!--<Binding.ValidationRules>
                                    <validators:PasswordValidation/>
                                </Binding.ValidationRules>-->
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>
            </StackPanel>

            <StackPanel>
                <Button Click="save">Сохранить в БД</Button>
                <Button Click="back">Назад</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
