<Page x:Class="Pract12.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract12.Pages"
      xmlns:validators="clr-namespace:Pract12.ValidationRules"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1">
            <Label>Телефон</Label>
            <StackPanel>
                <TextBox x:Name="PhoneBox" IsReadOnly="True" >
                    <TextBox.Text>
                        <Binding Path="UserProfile.Phone">
                            <!--<Binding.ValidationRules>
                                <validators:PasswordValidation/>
                            </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>

            <Label>День рождения</Label>
            <StackPanel>
                <TextBox x:Name="BirthdayBox" IsReadOnly="True" >
                    <TextBox.Text>
                        <Binding Path="UserProfile.Birthday">
                            <!--<Binding.ValidationRules>
                                <validators:PasswordValidation/>
                            </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>

            <Label>Краткое описание</Label>
            <StackPanel>
                <TextBox x:Name="BioBox" IsReadOnly="True" Height="100">
                    <TextBox.Text>
                        <Binding Path="UserProfile.Bio">
                            <!--<Binding.ValidationRules>
                                <validators:PasswordValidation/>
                            </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
        </StackPanel>
        <StackPanel>
           <Label>Изображение</Label>
            <StackPanel>
                <Image DataContext="{Binding UserProfile.AvatarUrl}"/>
            </StackPanel> 
        </StackPanel>
        
        <StackPanel Grid.Column="2">
            <Button Click="save">Редактировать профиль</Button>
            <Button Click="back">Назад</Button>
        </StackPanel>            
    </Grid>
</Page>
