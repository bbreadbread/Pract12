<Page x:Class="Pract12.Pages.UserInterestGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract12.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserInterestGroup"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Click="back">Назад</Button>

        <TextBlock Grid.Column="1" Text="{Binding User.Name}"/>

        <ListView Grid.Row="1"
                  Grid.RowSpan="2"
                 ItemsSource="{Binding service.InterestGroups}"
                 MouseDoubleClick="add_group_user"
                 SelectedItem="{Binding current}" Width="400">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                 <Run Text="Группа: "/>
                 <Run Text="{Binding Title}"/>
                    </TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Grid.RowSpan="2"
                  Grid.Row="1"
                  Grid.Column="1"
                 ItemsSource="{Binding serviceUser.UserInterestGroups}"
                 MouseDoubleClick="remove_group_user"
                 SelectedItem="{Binding currentUser}" Width="400">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                        <TextBlock>
                            <Run Text="Группа: "/>
                            <Run Text="{Binding InterestGroup.Title}" FontWeight="Bold"/>        
                        </TextBlock>
                            <TextBlock>
                            <Run Text="Дата вступления: "/>
                            <Run Text="{Binding JoinedAt, StringFormat=dd.MM.yyyy}"/>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel>
                            <CheckBox Content="М"
                                    IsChecked="{Binding IsModerator, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Checked="isModeratorClick"
                                    Unchecked="isModeratorClick"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
