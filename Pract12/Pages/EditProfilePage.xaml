<Page x:Class="Pract12.Pages.EditProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract12.Pages"
      xmlns:validators="clr-namespace:Pract12.ValidationRules"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="290"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Label>Телефон</Label>
            <StackPanel>
                <TextBox x:Name="PhoneBox">
                    <TextBox.Text>
                        <Binding Path="UserProfile.Phone">
                            <!--<Binding.ValidationRules>
                        <validators:PasswordValidation/>
                    </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>

            <Label>День рождения</Label>
            <StackPanel>
                <TextBox x:Name="BirthdayBox">
                    <TextBox.Text>
                        <Binding Path="UserProfile.Birthday">
                            <!--<Binding.ValidationRules>
                        <validators:PasswordValidation/>
                    </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>

            <Label>Краткое описание</Label>
            <StackPanel>
                <TextBox x:Name="BioBox" Height="100">
                    <TextBox.Text>
                        <Binding Path="UserProfile.Bio">
                            <!--<Binding.ValidationRules>
                                    <validators:PasswordValidation/>
                                </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>

                <StackPanel>
                    <Button Click="save">Сохранить в БД</Button>
                    <Button Click="back">Назад</Button>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label>Аватар</Label>
                <Image x:Name="AvatarImage" MouseLeftButtonDown="AvatarAdd" DataContext="{Binding UserProfile.AvatarUrl}"/>
            </StackPanel>
    </Grid>
</Page>
